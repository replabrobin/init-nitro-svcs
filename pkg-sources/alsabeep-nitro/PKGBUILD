pkgname='alsabeep-nitro'
pkgver='20251031'
pkgrel='1'
pkgdesc='nitro service script for alsabeep'
arch=('any')
url="https://github.com/replabrobin/init-nitro-svcs"
license=('BSD')
#groups=('nitro-galaxy')

provides=('init-alsabeep')
conflicts=('init-alsabeep')

depends=(
	'alsabeep-dkms'
	'nitro'
	)

source=(
	alsabeep.run
	alsabeep.finish
	)
b2sums=('4c761ed122967cf0da1285fbbbef04f946e8a2b692e5924bae9b1bd3aa022600bbd2f285f797f8b947001fd05d849cdd6cf30deb2db79855914e008654f20295'
        '6e4138fbab000538460bec411d73c81a1902b308c76ffae5d2494cc31769e72041052c4e11868248b2962f17a581ba45b0e421448488371b462d2679dc7b1dbc')
package() {
	install -Dm755 "$srcdir"/alsabeep.run "$pkgdir/etc/nitro/sv/alsabeep/run"
	install -Dm755 "$srcdir"/alsabeep.finish "$pkgdir/etc/nitro/sv/alsabeep/finish"
}
