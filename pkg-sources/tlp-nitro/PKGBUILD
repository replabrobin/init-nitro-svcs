pkgname='tlp-nitro'
pkgver='20180314'
pkgrel='5'
pkgdesc='nitro service script for tlp'
arch=('any')
url="https://github.com/replabrobin/init-nitro-svcs"
license=('BSD')
#groups=('nitro-galaxy')

provides=(
	'init-tlp'
	)

depends=(
	'tlp'
	'nitro'
	)

source=(
	tlp.run
	tlp.finish
	)
b2sums=('6a5bcaeb266a649ed5a0a3912019e17e877ac6113e9ddff05a79b4cf20ec41d33a533682fce1f63d4fc4bad04d4f1b6f27e21c72e425cfec1eb6200670cb0ee8'
        '7c3c462a488b297d65da3c203cdc33af8eb2ecd7c15bf153fd05d02dea9e25dee7c94c55e35c45243397b76d8391b96e9e461be075420d7151a0bd0169836770')
package() {
	install -Dm755 "$srcdir"/tlp.run "$pkgdir/etc/nitro/sv/tlp/run"
	install -Dm755 "$srcdir"/tlp.finish "$pkgdir/etc/nitro/sv/tlp/finish"
}
