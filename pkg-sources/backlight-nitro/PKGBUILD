pkgname='backlight-nitro'
pkgver='20200420'
pkgrel='4'
pkgdesc='nitro service script for backlight'
arch=('any')
url="https://github.com/replabrobin/init-nitro-svcs"
license=('BSD')
#groups=('nitro-galaxy')

provides=(
	'init-backlight'
	)

depends=(
	'nitro'
	)

source=(
	backlight.run
	backlight.finish
	)
b2sums=('68b22c45bc3768558ed93ab3535dd53ff3269fc3e0b1e1185103af9a5c90e9e2fc327d0717d0cbf66d3d97a43d6157cc97d8dded4459c12e445ce9873e7ba2b8'
        'dac3a89a6f275e115a270670c70502a3c753ab69c3687ee5e6194e0400f2ed58196cecc56c339dae85c0a2f2c3409eeb256b26122172d6f00c879c92a0c14902')
package() {
	install -Dm755 "$srcdir"/backlight.run "$pkgdir/etc/nitro/sv/backlight/run"
	install -Dm755 "$srcdir"/backlight.finish "$pkgdir/etc/nitro/sv/backlight/finish"
}
