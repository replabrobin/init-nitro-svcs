pkgname='fcgiwrap-nitro'
pkgver='20211208'
pkgrel='1'
pkgdesc='nitro service script for fcgiwrap'
arch=('any')
url="https://github.com/replabrobin/init-nitro-svcs"
license=('BSD')
#groups=('nitro-galaxy')

provides=(
	'init-fcgiwrap'
	)

depends=(
	'fcgiwrap'
	'nitro'
	)

source=(
	fcgiwrap.run
	fcgiwrap.finish
	)
b2sums=('0af3945a4687bb335230d9f11a28fac126739cfad6b917c7b781ddc0b5b5a14756cda3f3806ab5eb02959bca6fde9b1f470171c41bf24be9a7a592ad09b693b1'
        'bb1c0194878f71334e6d428bdb168fb15d17ad8e59cbf8f22896c88b2e73958d863e0c56665cc7f63a9aba52163c47e280db3ac44102566d6ee83773d2b0d516')
package() {
	install -Dm755 "$srcdir"/fcgiwrap.run "$pkgdir/etc/nitro/sv/fcgiwrap/run"
	install -Dm755 "$srcdir"/fcgiwrap.finish "$pkgdir/etc/nitro/sv/fcgiwrap/finish"
}
