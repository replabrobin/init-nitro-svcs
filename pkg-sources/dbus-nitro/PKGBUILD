package() {
	install -Dm755 "$srcdir"/80-dbus.sh "$pkgdir/etc/nitro/sv/dbus/sh"
	install -Dm755 "$srcdir"/dbus.check "$pkgdir/etc/nitro/sv/dbus/check"
	install -Dm755 "$srcdir"/dbus.run "$pkgdir/etc/nitro/sv/dbus/run"
}
