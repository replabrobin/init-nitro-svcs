	'lxd'
	'nitro'
	)

source=(
	lxd.run
	)
b2sums=('96f9b67e8971c323ea7b4bada8842fbaba3739f1428c2e08c2deecd56927261b8fa9bddba89b43086d359cca61f2620badcdbac255bff522ada7582f27f7904c')
