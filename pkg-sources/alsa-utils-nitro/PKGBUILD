pkgname='alsa-utils-nitro'
pkgver='20220321'
pkgrel='1'
pkgdesc='nitro service script for alsa-utils'
arch=('any')
url="https://github.com/replabrobin/init-nitro-svcs"
license=('BSD')
#groups=('nitro-galaxy')
install=alsa-utils-nitro.install
provides=(
	'init-alsa-utils'
	)

depends=(
	'alsa-utils'
	'nitro'
	)

source=(
	alsa.finish
	alsa.run
	)
b2sums=('76da57c8e2f7a76022acab2adce3c58a679bae52ab2aa723cc67b68f9ad8c1161de31967a9809a50a7d6f4f650f9cbe367532710e53638c82351683dc9263cfc'
        '81ad5890c080bc23da03c4050672883c92d9172128cb7166ed54b53a33f3f817a07b89f29e1f37c5dfa359d5f70ec492561bb7d105c7b5b4222e2a97041ea6de')
package() {
	install -Dm755 "$srcdir"/alsa.finish "$pkgdir/etc/nitro/sv/alsa-utils/finish"
	install -Dm755 "$srcdir"/alsa.run "$pkgdir/etc/nitro/sv/alsa-utils/run"
}
